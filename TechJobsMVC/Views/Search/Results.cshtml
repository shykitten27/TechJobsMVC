<div class="container body-content">

    <h1>@ViewBag.title</h1>

    @{
        //Use a loop to display job results in a table.
    }

    @if (ViewBag.jobs.Count == 0)
    {
        <p>No jobs available.</p>
    }
    else
    {
        <table class="job-listing">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Employer
                </th>
                <th>
                    Location
                </th>
                <th>
                    Position Type
                </th>
                <th>
                    Skills
                </th>
            </tr>
            @foreach (Job job in ViewBag.jobs)
            {
        <tr>
            <td>@job.Name</td>
            <td>@job.Employer</td>
            <td>@job.Location</td>
            <td>@job.PositionType</td>
            <td>@job.CoreCompetency</td>
        </tr>
            }
        </table>
    }
</div>