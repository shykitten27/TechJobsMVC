<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key == 'all'" />
                    <label for="@column.Key">@column.Value</label>
                </span>
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    @{
        //TODO #4: Loop over the search results to display all job fields.
    }
</div>

<div class="results">

@{
    //Use a loop to display job results in a table.
}

@if (ViewBag.jobs == null)
{
    <p>No jobs available.</p>
}
else
{
    <table class="job-listing">
        <tr>
            <th>
                Name
            </th>
            <th>
                Employer
            </th>
            <th>
                Location
            </th>
            <th>
                Position Type
            </th>
            <th>
                Skills
            </th>
        </tr>
        @foreach (Job job in ViewBag.jobs)
        {
            <tr>
                <td>@job.Name</td>
                <td>@job.Employer</td>
                <td>@job.Location</td>
                <td>@job.PositionType</td>
                <td>@job.CoreCompetency</td>
            </tr>
        }
    </table>
}
</div>